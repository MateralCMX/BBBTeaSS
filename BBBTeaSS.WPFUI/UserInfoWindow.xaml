<Window x:Class="BBBTeaSS.WPFUI.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBBTeaSS.WPFUI"
        mc:Ignorable="d"
        Title="用户信息" Height="290" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="UserWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Margin="10,0">用户名</Label>
        <TextBox x:Name="TextUserName" Grid.Row="2" Margin="10,0"></TextBox>
        <Label Grid.Row="4" Margin="10,0">昵称</Label>
        <TextBox x:Name="TextName" Grid.Row="5" Margin="10,0"></TextBox>
        <Button x:Name="BtnOk" Grid.Row="7" Margin="10,0" Click="BtnOk_Click">确定</Button>
    </Grid>
</Window>
